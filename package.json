{
    "name": "myexpress",
    "description": "A tiny express framework",
    "version": "1.0.0",
    "author": "Jean-Charles Mouss√© <jeancharles.msse@gmail.com>",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf dist/*",
        "lint": "tslint -c tslint.json -p tsconfig.json --fix",
        "tsc": "tsc",
        "build": "npm-run-all clean lint tsc && cp -R example/templates dist/example/",
        "dev": "tsc-watch --onSuccess \"node ./dist/example/app.js\"",
        "start": "node dist/example/app.js"
    },
    "devDependencies": {
        "@types/node": "^12.7.12",
        "npm-run-all": "^4.1.5",
        "tsc": "^1.20150623.0",
        "tsc-watch": "^4.0.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4"
    }
}
